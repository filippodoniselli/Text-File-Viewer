<Window x:Class="xaml_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xaml_UI"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Text Viewer" Height="566.073" Width="815.584" Icon="ext_file_generic_filetype_icon_176256.ico" Foreground="{x:Null}" Background="{x:Null}" ResizeMode="CanMinimize">
    <Grid Background="#FFB9D1EA" HorizontalAlignment="Left" Width="808">
        <Grid.OpacityMask>
            <SolidColorBrush Color="{DynamicResource MainBackground}"/>
        </Grid.OpacityMask>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="22,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452" FontFamily="Microsoft YaHei" RenderTransformOrigin="0.493,0.591" FontWeight="Bold" FontSize="16" Foreground="#FF0D3957"><Run Text="Choose a "/><Run Text="file to visualize (.txt, .config, .xml, .json, .ini"/><Run Text=")"/></TextBlock>
        <Button x:Name="chooseButton" Margin="22,65,0,0" FontFamily="Microsoft YaHei" FontSize="16" Click="ChooseButton_Click"  Background="#FF82B5FF" HorizontalAlignment="Left" Width="144" Height="40" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Search" Height="20">
                    <fa:ImageAwesome.Foreground>
                        <SolidColorBrush Color="#FF0D3957"/>
                    </fa:ImageAwesome.Foreground>
                </fa:ImageAwesome>
                <TextBlock Text="Choose file" Height="19" Width="89" Margin="10,0,0,0" Foreground="#FF0D3957" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="changeButton" HorizontalAlignment="Left" Height="40" Margin="636,443,0,0" VerticalAlignment="Top" Width="144" FontFamily="Microsoft YaHei" FontSize="16" Click="ChangeButton_Click" Background="#FF82B5FF" Foreground="#FF0D3957" IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Refresh" Height="20">
                    <fa:ImageAwesome.Foreground>
                        <SolidColorBrush Color="#FF0D3957"/>
                    </fa:ImageAwesome.Foreground>
                </fa:ImageAwesome>
                <TextBlock Text="Change file" Height="20" Width="81" Margin="10,0,0,0" Foreground="#FF0D3957" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="pathBox" Margin="202,65,0,0" TextWrapping="Wrap" Background="#FF82B5FF" FontFamily="Microsoft YaHei" FontSize="18" TextAlignment="Center" Foreground="White" SelectionTextBrush="Black" FontWeight="Bold" Padding="0,5,0,0" HorizontalAlignment="Left" Width="578" Height="40" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="257" Margin="22,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="758" FontFamily="Microsoft YaHei" FontSize="16" BorderBrush="#FF82B5FF" BorderThickness="2" VerticalScrollBarVisibility="Auto" IsUndoEnabled="False" IsEnabled="False"/>
        <Button x:Name="deleteButton" HorizontalAlignment="Left" Height="40" Margin="431,443,0,0" VerticalAlignment="Top" Width="144" FontFamily="Microsoft YaHei" FontSize="16" Click="DeleteButton_Click" Background="#FF82B5FF" Foreground="#FF0D3957" IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Trash" Height="20" Foreground="#FF0D3957"/>
                <TextBlock Text="Delete" Height="20" Width="64" Margin="10,0,0,0" Foreground="#FF0D3957" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Button x:Name="updateButton" HorizontalAlignment="Left" Height="40" Margin="226,443,0,0" VerticalAlignment="Top" Width="144" FontFamily="Microsoft YaHei" FontSize="16" Click="UpdateButton_Click" Background="#FF82B5FF" Foreground="#FF0D3957" IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Edit" Height="20" Foreground="#FF0D3957"/>
                <TextBlock Text="Update" Height="20" Width="77" Margin="10,0,0,0" Foreground="#FF0D3957" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <Button x:Name="saveButton" HorizontalAlignment="Left" Height="40" Margin="22,443,0,0" VerticalAlignment="Top" Width="144" FontFamily="Microsoft YaHei" FontSize="16" Click="SaveButton_Click" Background="#FF82B5FF" Foreground="#FF0D3957" IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Save" Height="20" Foreground="#FF0D3957"/>
                <TextBlock Text="Save as new" Height="20" Width="89" Margin="10,0,0,0" Foreground="#FF0D3957" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Button>
        <RadioButton x:Name="indentButton" Content="Indent .json" Margin="675,403,0,0" VerticalAlignment="Top" Width="105" IsEnabled="False" FontFamily="Microsoft YaHei" FontSize="14" Click="IndentButton_Click"/>
    </Grid>
</Window>
